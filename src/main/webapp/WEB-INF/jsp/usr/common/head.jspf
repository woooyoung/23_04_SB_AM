	}
	else {
	    localStorage.setItem("theme", "light");
	    //Theme__applyTo('light');
	}

	function Theme__applyTo(themeName) {
		  $('html').attr('data-theme', themeName);
	}


	function Theme__init() {
	  const theme = localStorage.getItem("theme") ?? "light";
